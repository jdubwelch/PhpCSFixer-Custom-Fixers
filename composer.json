{
    "name": "pedrotroller/php-cs-custom-fixer",
    "description": "PHP-CS-FIXER : my custom fixers",
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "friendsofphp/php-cs-fixer": "~3.0@dev"
    },
    "require-dev": {
        "phpspec/phpspec": "^5.0",
        "twig/twig": "^1.35",
        "webmozart/assert": "^1.3"
    },
    "autoload": {
        "psr-4": { "PedroTroller\\CS\\": "src/PedroTroller/CS/" }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    },
    "scripts": {
        "tests": [
            "tests\\Runner::run",
            "phpspec run -fpretty"
        ]
    }
}
